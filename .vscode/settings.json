// Place your settings in this file to overwrite the default settings
{
    // Editor
    "editor.fontFamily": "Hasklig Medium",
    "editor.fontWeight": "normal",
    "editor.fontSize": 14,
    "editor.cursorBlinking": "phase",
    "editor.cursorStyle": "line",
    "editor.renderWhitespace": "none",
    "editor.renderIndentGuides": false,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": true,
    "editor.fontLigatures": true,
    "editor.trimAutoWhitespace": true,
    "editor.insertSpaces": true,
    // Updates
    "update.channel": "none",
    // Window
    "window.zoomLevel": 0.5,
    "window.restoreFullscreen": false,
    "window.menuBarVisibility": "toggle",
    // Workbench
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": false,
    "workbench.editor.openPositioning": "left",
    "workbench.colorTheme": "Liqube Dark Code",
    "workbench.iconTheme": "vs-nomo-dark",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorCustomizations": {
        "statusBar.background": "#1A1A1A",
        "statusBar.noFolderBackground": "#0A0A0D",
        "statusBar.debuggingBackground": "#5f5f5f"
    },
    // Telemetry
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    // Extensions
    "extensions.autoUpdate": true,
    "extensions.ignoreRecommendations": true,
    // Rust extension
    "rust.build_on_save": false,
    "rust.all_features": true,
    "rust.goto_def_racer_fallback": true,
    "rust.unstable_features": true,
    "rust-client.updateOnStartup": true,
    "rust-client.channel": "nightly",
    // Integrated Terminal
    "terminal.integrated.fontFamily": "Hasklig Medium",
    "terminal.integrated.fontSize": 13,
    // VS icons
    "vsicons.dontShowNewVersionMessage": true,
    // Todo Highlight
    "todohighlight.isEnable": true,
    "todohighlight.isCaseSensitive": true,
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "color": "gray",
            "border": "1px solid gray",
            "borderRadius": "2px",
            "backgroundColor": "rgba(0,0,0,.2)"
        },
        {
            "text": "DEBUG:",
            "color": "gray",
            "border": "1px solid gray",
            "borderRadius": "2px",
            "backgroundColor": "rgba(0,0,0,.2)"
        },
        {
            "text": "FIXME:",
            "color": "gray",
            "border": "1px solid gray",
            "borderRadius": "2px",
            "backgroundColor": "rgba(0,0,0,.2)"
        },
        {
            "text": "NOTE:",
            "color": "gray",
            "border": "1px solid gray",
            "borderRadius": "2px",
            "backgroundColor": "rgba(0,0,0,.2)"
        },
        {
            "text": "HACK:",
            "color": "gray",
            "border": "1px solid gray",
            "borderRadius": "2px",
            "backgroundColor": "rgba(0,0,0,.2)"
        }
    ]
}
