// Place your settings in this file to overwrite the default settings
{
    // Editor
    "editor.fontFamily": "Hasklig Medium",
    "editor.fontWeight": "normal",
    "editor.fontSize": 13,
    "editor.cursorBlinking": "phase",
    "editor.cursorStyle": "line",
    "editor.renderWhitespace": "none",
    "editor.renderIndentGuides": false,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,

    // Updates
    "update.channel": "none",

    // Window
    "window.zoomLevel": 0,
    "window.restoreFullscreen": false,

    // Workbench
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,

    // Telemetry
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    // Extensions
    "extensions.autoUpdate": true,

    // Rust Plugin
    "rust.showOutput": false,
    "rust.actionOnSave": "check",
    "rust.forceLegacyMode": true,

    // Integrated Terminal
    "terminal.integrated.fontFamily": "Hasklig Medium",
    "terminal.integrated.fontLigatures": true,
    "terminal.integrated.fontSize": 13,

    // VS icons
    "vsicons.dontShowNewVersionMessage": true,
    "workbench.colorTheme": "Kary Ôºç Dark",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorCustomizations": {
        "statusBar.background": "#1A1A1A",
        "statusBar.noFolderBackground": "#0A0A0D",
        "statusBar.debuggingBackground": "#5f5f5f"
    }
}
