// Place your settings in this file to overwrite the default settings
{
    // Editor
    "editor.fontFamily": "Hasklig",
    "editor.fontWeight": "normal",
    "editor.fontSize": 14,
    "editor.cursorBlinking": "phase",
    "editor.cursorStyle": "line",
    "editor.renderWhitespace": "none",
    "editor.renderIndentGuides": false,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": true,
    "editor.fontLigatures": true,
    "editor.trimAutoWhitespace": true,
    "editor.insertSpaces": true,
    // Updates
    "update.channel": "none",
    // Window
    "window.zoomLevel": 0,
    "window.restoreFullscreen": false,
    // Workbench
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": false,
    "window.menuBarVisibility": "toggle",
    // Telemetry
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    // Extensions
    "extensions.autoUpdate": true,
    "extensions.ignoreRecommendations": true,
    // Rusty Code
    "rust.mode": "rls",
    "rust.rls": {
        "useRustfmt": true
    },
    "rust.actionOnSave": "clippy",
    "rust.showOutput": false,
    "rust.rustup": {
        "toolchain": "nightly-x86_64-unknown-linux-gnu",
        "nightlyToolchain": "nightly-x86_64-unknown-linux-gnu"
    },
    // Integrated Terminal
    "terminal.integrated.fontFamily": "Hasklig Medium",
    "terminal.integrated.fontLigatures": true,
    "terminal.integrated.fontSize": 13,
    // VS icons
    "vsicons.dontShowNewVersionMessage": true,
    "workbench.colorTheme": "Liqube Dark Code",
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.panel.location": "bottom",
    "workbench.colorCustomizations": {
        "statusBar.background": "#1A1A1A",
        "statusBar.noFolderBackground": "#0A0A0D",
        "statusBar.debuggingBackground": "#5f5f5f"
    }
}